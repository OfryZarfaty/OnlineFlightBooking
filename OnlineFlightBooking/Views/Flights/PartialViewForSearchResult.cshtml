@model IEnumerable<OnlineFlightBooking.Models.Flight>

@using (Html.BeginForm("Create", "Reservations", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <th>
                <div class="output-grp">
                    @Html.DisplayNameFor(model => model.FlightID)
                </div>
            </th>
            <th>
                <div class="output-grp">
                    @Html.DisplayNameFor(model => model.FlightFromCountry)
                </div>
            </th>
            <th>
                <div class="output-grp">
                    @Html.DisplayNameFor(model => model.FlightToCountry)
                </div>
            </th>
            <th>
                <div class="output-grp">
                    @Html.DisplayNameFor(model => model.FlightDateTimeTakeOff)
                </div>
            </th>
            <th>
                <div class="output-grp">
                    @Html.DisplayNameFor(model => model.FlightPrice)
                </div>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="results">
                <td>
                    <label>
                        <input name="flightID" type="radio" value="@item.FlightID" required />
                        <span></span>
                    </label>

                    <input type="hidden" name="numOfPassangers" value="@ViewBag.numOfPassengers" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightFromCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightToCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightDateTimeTakeOff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightPrice)
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="Book Flight" class="book-button">
}
