@using PagedList;
@using PagedList.Mvc;

@model IPagedList<OnlineFlightBooking.Models.Flight>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<head>
    <link rel="stylesheet" href="~/Content/sitePages.css" />
    <title>Flights Status</title>
</head>

<body>
    <div id="tittles">
        <h1 class="head">ONLINE FLIGHT TIMETABLE</h1>
        <h3 class="head-line">Information is continuously updated</h3>
    </div>

    <table id="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().FlightNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FlightFromCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FlightToCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FlightDateTimeTakeOff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FlightDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FlightDateTimeLanding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().FlightStatus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="lines">
                <td>
                    @Html.DisplayFor(modelItem => item.FlightNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightFromCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightToCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightDateTimeTakeOff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightDateTimeLanding)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightStatus)
                </td>
            </tr>
        }

    </table>

    @Html.PagedListPager(Model, page => Url.Action("FlightsStatus", new { page }))

</body>
