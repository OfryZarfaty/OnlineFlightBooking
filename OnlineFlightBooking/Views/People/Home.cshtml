    <div id="map"></div>
    <script>
        function initMap() {
            //set the map on tel aviv
            var options = {
                zoom: 5,
                center: { lat: 32.0853, lng: 34.7818 }
            }

            //create google map object
            var map = new google.maps.Map(document.getElementById('map'), options);
            //markers
            addMarker({ lat: 32.0853, lng: 34.7818 });
            addMarker({ lat: 39.0742, lng: 21.8243 });
            addMarker({ lat: 38.9637, lng: 35.2433 });
            addMarker({ lat: 41.8719, lng: 12.5674 });
            addMarker({ lat: 35.1264, lng: 33.4299 });
            addMarker({ lat: 15.8700, lng: 100.9925 });
            addMarker({ lat: 14.0583, lng: 108.2772 });
            addMarker({ lat: 35.8617, lng: 104.1954 });
            addMarker({ lat: 40.4168, lng: -3.7038 });
            addMarker({ lat: 51.1657, lng: 10.4515 });
            addMarker({ lat: 61.9241, lng: 25.7482 });
            addMarker({ lat: 60.4720, lng: 8.4689 });
            addMarker({ lat: 51.5074, lng: 0.1278 });
            addMarker({ lat: 56.1304, lng: -106.3468 });
            addMarker({ lat: 40.7128, lng: -74.0060 });

            function addMarker(coords) {
                var marker = new google.maps.Marker({
                    position: coords,
                    //where to add the marker to
                    map: map,
                    icon: 'http://maps.google.com/mapfiles/kml/shapes/airports.png',
                });

            }

            google.maps.event.addListener(map, 'click', function (event) {
                var result = [event.latLng.lng()];
                transition(result);
            });
        }
    </script>
    <script defer
